<h2>Create New Figure</h2>

<form action="/figures" method="POST">
    <h3>Name: <input type="text" id="figure_name" name="figure[name]"></h3>
    <h3>Titles</h3>
    <% @titles.each do |title| %>
        <h4><input type="checkbox" id="title_<%= "#{title.id}" %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></h4>
    <% end %>
    <h3>Create New Title:</h3>
    <input type="text" id="new_title" name="title[name]"><br>

    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <h4><input type="checkbox" id="landmark_<%= "#{landmark.id}" %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %></h4>
    <% end %>
    <h3>Create New Landmark:</h3>
    Name: <input type="text" id="new_landmark" name="landmark[name]"><br>
    Year: <input type="text" name="landmark[year_completed]"><br>
    

    <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
